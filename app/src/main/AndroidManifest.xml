<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.day.mate">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.DayMate">

        <!-- 🟢 Onboarding: First screen (LAUNCHER) -->
        <activity
            android:name="com.day.mate.ui.onboardingActivity1.OnboardingActivity1"
            android:exported="true"
            android:theme="@style/Theme.DayMate">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- 🟣 Onboarding: Second screen -->
        <activity
            android:name="com.day.mate.ui.onboardingActivity2.OnboardingActivity2"
            android:exported="false"
            android:theme="@style/Theme.DayMate" />

        <!-- 🔵 Onboarding: Third screen -->
        <activity
            android:name="com.day.mate.ui.onboardingActivity3.OnboardingActivity3"
            android:exported="false"
            android:theme="@style/Theme.DayMate" />

        <!-- 🏠 Main app screen -->
        <activity
            android:name="com.day.mate.MainActivity"
            android:exported="true"
            android:theme="@style/Theme.DayMate" />

    </application>

</manifest>